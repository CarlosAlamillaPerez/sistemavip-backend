@model SistemaVIP.Core.DTOs.Servicio.ServicioDto

<div class="row">
    <div class="col-md-6">
        <h6 class="mb-3">Información del Servicio</h6>
        <dl class="row">
            <dt class="col-sm-4">ID Servicio</dt>
            <dd class="col-sm-8">@Model.Id</dd>

            <dt class="col-sm-4">Presentador</dt>
            <dd class="col-sm-8">@Model.NombrePresentador</dd>

            <dt class="col-sm-4">Terapeuta</dt>
            <dd class="col-sm-8">@(Model.Terapeutas?.FirstOrDefault()?.NombreTerapeuta)</dd>

            <dt class="col-sm-4">Fecha Servicio</dt>
            <dd class="col-sm-8">@Model.FechaServicio.ToString("dd/MM/yyyy HH:mm")</dd>
        </dl>
    </div>
    <div class="col-md-6">
        <h6 class="mb-3">Detalles Financieros</h6>
        <dl class="row">
            <dt class="col-sm-4">Monto Total</dt>
            <dd class="col-sm-8">$@Model.MontoTotal.ToString("N2")</dd>

            <dt class="col-sm-4">Estado</dt>
            <dd class="col-sm-8">
                <span class="badge bg-@(Model.Estado switch {
                    "PENDIENTE" => "secondary",
                    "POR_CONFIRMAR" => "info",
                    "EN_PROCESO" => "primary",
                    "FINALIZADO" => "success",
                    "PAGADO" => "success",
                    "LIQUIDADO" => "success",
                    "CANCELADO" => "danger",
                    _ => "secondary"
                })">@Model.Estado</span>
            </dd>
        </dl>
    </div>
</div>

<!-- Timeline de Estados -->
<div class="row mt-4">
    <div class="col-12">
        <h6 class="mb-3">Historial de Estados</h6>
        <div class="timeline">
            <!-- Se llenará dinámicamente con JavaScript -->
        </div>
    </div>
</div>