@model SistemaVIP.Core.DTOs.CambioEstadoDto

<div class="row">
    <div class="col-12">
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i>
            Cambiar estado de: <strong>@ViewBag.EstadoActual</strong> a <strong>@ViewBag.NuevoEstado</strong>
        </div>
    </div>
</div>

<form id="formCambioEstado">
    <input type="hidden" name="Estado" value="@ViewBag.NuevoEstado" />

    <div class="form-group mb-3">
        <label class="form-label">Motivo del cambio</label>
        <textarea class="form-control"
                  name="MotivoEstado"
                  rows="3"
                  required
                  placeholder="Ingrese el motivo del cambio de estado"></textarea>
    </div>

    @if (ViewBag.RequiereComprobante == true)
    {
        <div class="form-group mb-3">
            <label class="form-label">Comprobante de pago</label>
            <input type="file"
                   class="form-control"
                   name="Comprobante"
                   accept=".jpg,.jpeg,.png,.pdf"
                   required />
        </div>
    }

    <div class="d-flex justify-content-end gap-2">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-save"></i> Guardar Cambio
        </button>
    </div>
</form>