@model SistemaVIP.Core.DTOs.CambioEstadoDto

<div class="row">
    <div class="col-12">
        <!-- Panel de información actual -->
        <div class="alert alert-info mb-3">
            <div class="row">
                <div class="col-md-6">
                    <strong>Monto Total:</strong> $@Model.MontoTotal
                </div>
                <div class="col-md-6">
                    <strong>Comprobantes:</strong> $@Model.MontoComprobantes
                </div>
            </div>
        </div>

        <!-- Detalles de comprobantes si es cambio a PAGADO -->
        @if (ViewBag.NuevoEstado == "PAGADO")
        {
                <div class="card mb-3">
                    <div class="card-header">
                        <h6 class="mb-0">Comprobantes de Pago</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Tipo</th>
                                        <th>Monto</th>
                                        <th>N° Operación</th>
                                        <th>Estado</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Lista de comprobantes -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
        }

        <!-- Detalles de liquidación si es cambio a LIQUIDADO -->
        @if (ViewBag.NuevoEstado == "LIQUIDADO")
        {
                <div class="card mb-3">
                    <div class="card-header">
                        <h6 class="mb-0">Detalles de Liquidación</h6>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Monto Terapeuta:</strong> $@Model.MontoTerapeuta</p>
                                <p><strong>Comisión Empresa:</strong> $@Model.ComisionEmpresa</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Comisión Presentador:</strong> $@Model.ComisionPresentador</p>
                                <p><strong>Total a Liquidar:</strong> $@Model.TotalLiquidacion</p>
                            </div>
                        </div>
                    </div>
                </div>
        }
    </div>
</div>