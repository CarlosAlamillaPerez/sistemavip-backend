@{
    ViewData["Title"] = "Seguimiento de Servicios";
}

<head>
    <link rel="stylesheet" href="~/css/servicios/servicios.css" asp-append-version="true" />
</head>

<div class="container-fluid mt-4">
    <div class="row">
        <!-- Filtros -->
        <div class="col-12 mb-4">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Estado</label>
                                <select class="form-select" id="filtro-estado">
                                    <option value="">Todos</option>
                                    <option value="PENDIENTE">Pendiente</option>
                                    <option value="POR_CONFIRMAR">Por Confirmar</option>
                                    <option value="EN_PROCESO">En Proceso</option>
                                    <option value="FINALIZADO">Finalizado</option>
                                    <option value="PAGADO">Pagado</option>
                                    <option value="LIQUIDADO">Liquidado</option>
                                    <option value="CANCELADO">Cancelado</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Presentador</label>
                                <select class="form-select" id="filtro-presentador">
                                    <option value="">Todos</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Fecha Desde</label>
                                <input type="date" class="form-control" id="fecha-desde" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Fecha Hasta</label>
                                <input type="date" class="form-control" id="fecha-hasta" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Lista de Servicios -->
        <div class="col-12">
            @await Html.PartialAsync("~/Views/Servicios/Seguimiento/_ListaServicios.cshtml")
        </div>
    </div>

    <div id="modalSection" style="display: none;">
        <!-- Aquí se cargarán los modales dinámicamente -->
    </div>
</div>

<script src="~/js/servicios/seguimiento.js" asp-append-version="true"></script>