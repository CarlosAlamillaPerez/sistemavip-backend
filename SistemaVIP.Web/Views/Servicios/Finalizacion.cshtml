<!-- Views/Servicio/Finalizacion.cshtml -->
@model SistemaVIP.Core.DTOs.Servicio.ConfirmacionServicioDetalleDto
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Finalización de Servicio - Sistema VIP</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container mt-5">
        <div class="card shadow">
            <div class="card-body text-center">
                <h3 class="mb-4">Hola @Model.NombreTerapeuta</h3>
                <p class="lead">¿Finalizaste el servicio?</p>
                <button class="btn btn-primary btn-lg mt-3" id="btnFinalizar">
                    Confirmar Finalización
                </button>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/servicios/finalizacion.js"></script>
    <script>
        window.linkFinalizacion = '@Model.LinkFinalizacion';
    </script>
</body>
</html>