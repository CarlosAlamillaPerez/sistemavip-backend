@model SistemaVIP.Core.DTOs.Servicio.ConfirmacionServicioDetalleDto
@{
    Layout = "_LayoutPublic";
    ViewData["Title"] = "Finalización de Servicio";
}

@if (Model.Estado == "FINALIZADO")
{
    <div class="container mt-5">
        <div class="alert alert-danger text-center py-5">
            <i class="fas fa-triangle-exclamation fa-3x mb-3"></i>
            <h3 class="mt-3">Servicio Finalizado</h3>
        </div>
    </div>
}
else
{
    <div class="container mt-5">
        <div class="card shadow">
            <div class="card-body text-center">
                <h3 class="mb-4">Hola @Model.NombreTerapeuta</h3>
                <p class="lead">¿Finalizaste el servicio?</p>
                <button class="btn btn-primary btn-lg mt-3" id="btnFinalizar">
                    Confirmar Finalización
                </button>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        window.linkFinalizacion = '@Model.LinkFinalizacion';
    </script>
    <script src="~/js/servicios/finalizacion.js"></script>
}