<div class="row">
    <div class="col-12">
        <dl class="row">
            <dt class="col-sm-3">Nombre</dt>
            <dd class="col-sm-9">@Model.Nombre</dd>

            <dt class="col-sm-3">Descripción</dt>
            <dd class="col-sm-9">@Model.Descripcion</dd>

            <dt class="col-sm-3">Estado</dt>
            <dd class="col-sm-9">
                <span class="badge bg-@(Model.Estado ? "success" : "danger")">
                    @(Model.Estado ? "Activo" : "Inactivo")
                </span>
            </dd>

            <dt class="col-sm-3">Fecha Creación</dt>
            <dd class="col-sm-9">@Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</dd>

            @if (!string.IsNullOrEmpty(Model.Notas))
            {
                <dt class="col-sm-3">Notas</dt>
                <dd class="col-sm-9">@Model.Notas</dd>
            }
        </dl>
    </div>
</div>