@model SistemaVIP.Core.DTOs.ServicioExtraCatalogoDto

@{
    var esEdicion = Model?.Id > 0 ? Model.Id.ToString() : null;
}

<form id="formServicioExtra" autocomplete="off" data-id=@(esEdicion)>
    <div class="row">
        <div class="col-12 mb-3">
            <label class="form-label">Nombre del Servicio</label>
            <input type="text" class="form-control" name="Nombre" value="@(Model?.Nombre ?? "")" required>
        </div>
    </div>

    <div class="row">
        <div class="col-12 mb-3">
            <label class="form-label">Descripción</label>
            <textarea class="form-control"
                      name="Descripcion"
                      rows="3"
                      required>@(Model?.Descripcion ?? "")</textarea>
        </div>
    </div>

    <div class="row">
        <div class="col-12 mb-3">
            <label class="form-label">Estado</label>
            <select class="form-select" name="Estado">
                <option value="true" selected="@(Model?.Estado == true)">Activo</option>
                <option value="false" selected="@(Model?.Estado == false)">Inactivo</option>
            </select>
        </div>
    </div>

    <div class="d-flex justify-content-end gap-2">
        <button type="submit" class="btn btn-primary">
            @(Model == null ? "Crear" : "Actualizar")
        </button>
    </div>
</form>