<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema VIP</title>

    <!-- Bootstrap y dependencias principales -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://unpkg.com/bootstrap-table@1.22.1/dist/bootstrap-table.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">

    <!-- Estilos propios -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/presentador/dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SistemaVIP.Web.styles.css" asp-append-version="true" />

    <!-- Scripts Base -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <!-- Anti-forgery token para AJAX -->
    @Html.AntiForgeryToken()

    <div class="wrapper">
        <!-- Sidebar -->
        @await Html.PartialAsync("~/Views/Presentador/Shared/_NavPresentador.cshtml")

        <!-- Page Content -->
        <div id="content">
            <!-- Navbar superior -->
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <button type="button" id="sidebarCollapse" class="btn-toggle-sidebar">
                        <i class="fas fa-bars fa-lg"></i>
                    </button>

                    <div class="ms-auto">
                        @await Html.PartialAsync("_LoginPartial")
                    </div>
                </div>
            </nav>

            <!-- Contenido principal -->
            <div class="container-fluid p-4">
                <div class="row">
                    <!-- Sistema de Tabs -->
                    <div class="col-12 mb-4">
                        <ul class="nav nav-tabs" id="presentadorTabs" role="tablist">
                            <li class="nav-item" role="presentation">
                                <button class="nav-link active" id="servicios-tab" data-bs-toggle="tab"
                                        data-bs-target="#servicios" type="button" role="tab">
                                    <i class="fas fa-calendar-check"></i> Servicios
                                </button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="calendario-tab" data-bs-toggle="tab"
                                        data-bs-target="#calendario" type="button" role="tab">
                                    <i class="fas fa-calendar-alt"></i> Calendario
                                </button>
                            </li>
                        </ul>
                    </div>

                    <!-- Contenido de los Tabs -->
                    <div class="col-12">
                        <div class="tab-content" id="presentadorTabsContent">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
                $('#content').toggleClass('active');
            });
        });
    </script>

    <!-- jQuery Plugins -->
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <!-- Bootstrap y sus plugins -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/bootstrap-table@1.22.1/dist/bootstrap-table.min.js"></script>
    <script src="https://unpkg.com/bootstrap-table@1.22.1/dist/locale/bootstrap-table-es-MX.min.js"></script>

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/5e3303217a.js" crossorigin="anonymous"></script>

    <!-- Moment.js para manejo de fechas -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>

    <!-- Servicios propios -->
    <script src="~/js/services/loading.service.js" asp-append-version="true"></script>
    <script src="~/js/services/alert.service.js" asp-append-version="true"></script>
    <script src="~/js/interceptors/ajax.interceptor.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>