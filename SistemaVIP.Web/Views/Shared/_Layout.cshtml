<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SistemaVIP</title>

    <!-- Bootstrap y dependencias principales -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://unpkg.com/bootstrap-table@1.22.1/dist/bootstrap-table.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">

    <!-- Estilos propios -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SistemaVIP.Web.styles.css" asp-append-version="true" />

    <!-- Scripts Base -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <!-- Anti-forgery token para AJAX -->
    @Html.AntiForgeryToken()

    <div class="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar" class="bg-dark">
            <div class="sidebar-header">
                <h3>Sistema VIP</h3>
            </div>

            <ul class="list-unstyled components">
                <li>
                    <a href="#personalSubmenu" data-bs-toggle="collapse">
                        <i class="fas fa-users"></i> Personal
                    </a>
                    <ul class="collapse list-unstyled" id="personalSubmenu">
                        <li><a href="/Personal/Presentadores">Presentadores</a></li>
                        <li><a href="/Personal/Terapeutas">Terapeutas</a></li>
                        <li><a href="/Personal/Asignaciones">Asignaciones</a></li>
                    </ul>
                </li>

                <li>
                    <a href="#serviciosSubmenu" data-bs-toggle="collapse">
                        <i class="fas fa-calendar-check"></i> Servicios
                    </a>
                    <ul class="collapse list-unstyled" id="serviciosSubmenu">
                        <li><a href="/Servicios/Activos">En Proceso</a></li>
                        <li><a href="/Servicios/Seguimiento">Seguimiento</a></li>
                        <li><a href="/Servicios/ServiciosExtra">Servicios Extra</a></li>
                    </ul>
                </li>

                <li>
                    <a href="#controlSubmenu" data-bs-toggle="collapse">
                        <i class="fas fa-shield-alt"></i> Control
                    </a>
                    <ul class="collapse list-unstyled" id="controlSubmenu">
                        <li><a href="/Control/Blacklist">Blacklist</a></li>
                        <li><a href="/Control/Bitacora">Bitácora</a></li>
                        <li><a href="/Control/Alertas">Alertas</a></li>
                    </ul>
                </li>

                <li>
                    <a href="#reportesSubmenu" data-bs-toggle="collapse">
                        <i class="fas fa-chart-bar"></i> Reportes
                    </a>
                    <ul class="collapse list-unstyled" id="reportesSubmenu">
                        <li><a href="/Reportes/Presentadores">Por Presentador</a></li>
                        <li><a href="/Reportes/Terapeutas">Por Terapeuta</a></li>
                        <li><a href="/Reportes/Servicios">Por Servicio</a></li>
                    </ul>
                </li>
            </ul>
        </nav>

        <!-- Page Content -->
        <div id="content">
            <!-- Navbar superior -->
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <button type="button" id="sidebarCollapse" class="btn-toggle-sidebar">
                        <i class="fas fa-bars fa-lg"></i>
                    </button>

                    <div class="ms-auto">
                        @await Html.PartialAsync("_LoginPartial")
                    </div>
                </div>
            </nav>

            <!-- Dashboard Principal -->
            <div class="container-fluid p-4">
                <div class="row" id="dashboard">
                    <!-- Indicadores principales -->
@*                     <div class="col-md-3 mb-4">
                        <div class="card bg-primary text-white">
                            <div class="card-body">
                                <h5>Servicios Activos</h5>
                                <h2 id="serviciosActivos">0</h2>
                            </div>
                        </div>
                    </div> *@
                    <!-- Más indicadores... -->
                </div>

                <!-- Contenido principal -->
                <div class="row">
                    <div class="col-12">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- jQuery Plugins -->
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <!-- Bootstrap y sus plugins -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/bootstrap-table@1.22.1/dist/bootstrap-table.min.js"></script>
    <script src="https://unpkg.com/bootstrap-table@1.22.1/dist/locale/bootstrap-table-es-MX.min.js"></script>

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/5e3303217a.js" crossorigin="anonymous"></script>

    <!-- Moment.js para manejo de fechas -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>

    <!-- Servicios propios (IMPORTANTE: El orden importa) -->
    <script src="~/js/services/loading.service.js" asp-append-version="true"></script>
    <script src="~/js/services/alert.service.js" asp-append-version="true"></script>
    <script src="~/js/interceptors/ajax.interceptor.js" asp-append-version="true"></script>

    <!-- Script propio -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>