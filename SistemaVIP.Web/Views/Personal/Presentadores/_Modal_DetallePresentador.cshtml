@model SistemaVIP.Core.DTOs.Presentador.PresentadorDto

<div class="row">
    <div class="col-md-6">
        <h6 class="mb-3">Información Personal</h6>
        <dl class="row">
            <dt class="col-sm-4">Nombre</dt>
            <dd class="col-sm-8">@Model.Nombre @Model.Apellido</dd>

            <dt class="col-sm-4">Teléfono</dt>
            <dd class="col-sm-8">@Model.Telefono</dd>

            <dt class="col-sm-4">Email</dt>
            <dd class="col-sm-8">@Model.Email</dd>

            <dt class="col-sm-4">Documento</dt>
            <dd class="col-sm-8">@Model.DocumentoIdentidad</dd>
        </dl>
    </div>
    <div class="col-md-6">
        <h6 class="mb-3">Información del Sistema</h6>
        <dl class="row">
            <dt class="col-sm-4">Estado</dt>
            <dd class="col-sm-8">
                <span class="badge bg-@(Model.Estado == "ACTIVO" ? "success" :
                                     Model.Estado == "INACTIVO" ? "danger" : "warning")">
                    @Model.Estado
                </span>
            </dd>

            <dt class="col-sm-4">Comisión</dt>
            <dd class="col-sm-8">@Model.PorcentajeComision%</dd>

            <dt class="col-sm-4">Fecha Alta</dt>
            <dd class="col-sm-8">@Model.FechaAlta.ToString("dd/MM/yyyy")</dd>
        </dl>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <h6 class="mb-3">Terapeutas Asignados</h6>
        <table id="tablaTerapeutasAsignados" class="table table-sm"
               data-toggle="table"
               data-url="/Personal/ObtenerTerapeutasPorPresentador"
               data-query-params="queryParamsTerapeutas"
               data-pagination="true"
               data-search="true">
            <thead>
                <tr>
                    <th data-field="nombreCompleto">Nombre</th>
                    <th data-field="estado">Estado</th>
                    <th data-field="fechaAsignacion" data-formatter="formatoFecha">Fecha Asignación</th>
                </tr>
            </thead>
        </table>
    </div>
</div>