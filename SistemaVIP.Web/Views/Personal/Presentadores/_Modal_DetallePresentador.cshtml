@model SistemaVIP.Core.DTOs.Presentador.PresentadorDetalleDto

<div class="row">
    <div class="col-md-6">
        <h6 class="mb-3">Información Personal</h6>
        <dl class="row">
            <dt class="col-sm-4">Nombre</dt>
            <dd class="col-sm-8">@Model.Presentador.Nombre @Model.Presentador.Apellido</dd>

            <dt class="col-sm-4">Teléfono</dt>
            <dd class="col-sm-8">@Model.Presentador.Telefono</dd>

            <dt class="col-sm-4">Email</dt>
            <dd class="col-sm-8">@Model.Presentador.Email</dd>

            <dt class="col-sm-4">Documento</dt>
            <dd class="col-sm-8">@Model.Presentador.DocumentoIdentidad</dd>
        </dl>
    </div>
    <div class="col-md-6">
        <h6 class="mb-3">Información del Sistema</h6>
        <dl class="row">
            <dt class="col-sm-4">Estado</dt>
            <dd class="col-sm-8">
                <span class="badge bg-@(Model.Presentador.Estado == "ACTIVO" ? "success" :
                                     Model.Presentador.Estado == "INACTIVO" ? "danger" : "warning")">
                    @Model.Presentador.Estado
                </span>
            </dd>

            <dt class="col-sm-4">Comisión</dt>
            <dd class="col-sm-8">@Model.Presentador.PorcentajeComision%</dd>

            <dt class="col-sm-4">Fecha Alta</dt>
            <dd class="col-sm-8">@Model.Presentador.FechaAlta.ToString("dd/MM/yyyy")</dd>
        </dl>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <h6 class="mb-3">Terapeutas Asignados</h6>
        <table class="table table-sm">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Teléfono</th>
                    <th>Estado</th>
                    <th>Fecha Asignación</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var terapeuta in Model.TerapeutasAsignados)
                {
                    <tr>
                        <td>@terapeuta.NombreCompleto</td>
                        <td>@terapeuta.Telefono</td>
                        <td>
                            <span class="badge bg-@(terapeuta.Estado == "ACTIVO" ? "success" : "danger")">
                                @terapeuta.Estado
                            </span>
                        </td>
                        <td>@terapeuta.FechaAsignacion.ToString("dd/MM/yyyy")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>