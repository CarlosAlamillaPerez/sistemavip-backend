@model SistemaVIP.Core.DTOs.Terapeuta.CreateTerapeutaDto

@{
    var terapeutaId = ViewBag.TerapeutaId;
}

<form id="formTerapeuta" autocomplete="off" data-terapeuta-id="@terapeutaId">
    <div class="card">
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="form-floating">
                        <input type="text" class="form-control" asp-for="Nombre" autocomplete="off" placeholder="Nombre">
                        <label class="form-label">Nombre</label>
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input type="text" class="form-control" asp-for="Apellido" autocomplete="off" placeholder="Apellido">
                        <label class="form-label">Apellido</label>
                        <span asp-validation-for="Apellido" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="form-floating">
                        <input type="tel" class="form-control" asp-for="Telefono" autocomplete="off" placeholder="Teléfono">
                        <label class="form-label">Teléfono</label>
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input type="email" class="form-control" asp-for="Email" autocomplete="off" placeholder="Email">
                        <label class="form-label">Email</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="form-floating">
                        <input type="text" class="form-control" asp-for="DocumentoIdentidad" autocomplete="off" placeholder="Ciudad de trabajo">
                        <label class="form-label">Ciudad de trabajo</label>
                        <span asp-validation-for="DocumentoIdentidad" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input type="text" class="form-control" asp-for="Estatura" autocomplete="off" placeholder="Estatura">
                        <label class="form-label">Estatura</label>
                        <span asp-validation-for="Estatura" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="form-floating">
                        <input type="date" class="form-control" asp-for="FechaNacimiento" value="@DateTime.Today.AddYears(-18).ToString("yyyy-MM-dd")" autocomplete="off" placeholder="Fecha de Nacimiento">
                        <label class="form-label">Fecha de Nacimiento</label>
                        <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input type="text" class="form-control" asp-for="FotoUrl" autocomplete="off" placeholder="URL de Foto (opcional)">
                        <label class="form-label">URL de Foto (opcional)</label>
                        <span asp-validation-for="FotoUrl" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-12">
                    <div class="form-floating">
                        <textarea class="form-control" asp-for="Notas" rows="3" autocomplete="off" placeholder="Notas (opcional)"></textarea>
                        <label class="form-label">Notas (opcional)</label>
                        <span asp-validation-for="Notas" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg">Guardar</button>
            </div>
        </div>
    </div>
</form>