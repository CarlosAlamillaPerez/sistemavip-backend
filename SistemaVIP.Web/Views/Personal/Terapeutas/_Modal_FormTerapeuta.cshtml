@model SistemaVIP.Core.DTOs.Terapeuta.CreateTerapeutaDto

@{
    var terapeutaId = ViewBag.TerapeutaId;
}

<form id="formTerapeuta" autocomplete="off" data-terapeuta-id="@terapeutaId">
    <div class="row">
        <div class="col-md-6 mb-3">
            <label class="form-label">Nombre</label>
            <input type="text" class="form-control" asp-for="Nombre" autocomplete="off">
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label class="form-label">Apellido</label>
            <input type="text" class="form-control" asp-for="Apellido" autocomplete="off">
            <span asp-validation-for="Apellido" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label class="form-label">Teléfono</label>
            <input type="tel" class="form-control" asp-for="Telefono" autocomplete="off">
            <span asp-validation-for="Telefono" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" asp-for="Email" autocomplete="off">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label class="form-label">Documento de Identidad</label>
            <input type="text" class="form-control" asp-for="DocumentoIdentidad" autocomplete="off">
            <span asp-validation-for="DocumentoIdentidad" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label class="form-label">Estatura</label>
            <input type="text" class="form-control" asp-for="Estatura" autocomplete="off">
            <span asp-validation-for="Estatura" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label class="form-label">Fecha de Nacimiento</label>
            <input type="date" class="form-control" asp-for="FechaNacimiento" autocomplete="off">
            <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label class="form-label">URL de Foto (opcional)</label>
            <input type="text" class="form-control" asp-for="FotoUrl" autocomplete="off">
            <span asp-validation-for="FotoUrl" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label class="form-label">Tarifa Base</label>
            <input type="number" class="form-control" asp-for="TarifaBase" autocomplete="off">
            <span asp-validation-for="TarifaBase" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label class="form-label">Tarifa Extra</label>
            <input type="number" class="form-control" asp-for="TarifaExtra" autocomplete="off">
            <span asp-validation-for="TarifaExtra" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-12 mb-3">
            <label class="form-label">Notas (opcional)</label>
            <textarea class="form-control" asp-for="Notas" rows="3" autocomplete="off"></textarea>
            <span asp-validation-for="Notas" class="text-danger"></span>
        </div>
    </div>

    <div class="d-flex justify-content-end gap-2">
        <button type="submit" class="btn btn-primary">Guardar</button>
    </div>
</form>