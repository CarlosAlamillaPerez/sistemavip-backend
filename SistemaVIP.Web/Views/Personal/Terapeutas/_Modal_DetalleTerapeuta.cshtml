@model SistemaVIP.Core.DTOs.Terapeuta.TerapeutaDto

<div class="row">
    <div class="col-md-6">
        <h6 class="mb-3">Información Personal</h6>
        <dl class="row">
            <dt class="col-sm-4">Nombre</dt>
            <dd class="col-sm-8">@Model.Nombre @Model.Apellido</dd>

            <dt class="col-sm-4">Teléfono</dt>
            <dd class="col-sm-8">@Model.Telefono</dd>

            <dt class="col-sm-4">Fecha Nacimiento</dt>
            <dd class="col-sm-8">@Model.FechaNacimiento.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-4">Estatura</dt>
            <dd class="col-sm-8">@Model.Estatura</dd>
        </dl>
    </div>
    <div class="col-md-6">
        <h6 class="mb-3">Información del Sistema</h6>
        <dl class="row">
            <dt class="col-sm-4">Estado</dt>
            <dd class="col-sm-8">
                <span class="badge bg-@(Model.Estado == "ACTIVO" ? "success" :
                                   Model.Estado == "INACTIVO" ? "danger" : "warning")">
                    @Model.Estado
                </span>
            </dd>

            <dt class="col-sm-4">Tarifa Base</dt>
            <dd class="col-sm-8">$@Model.TarifaBase.ToString("N2")</dd>

            <dt class="col-sm-4">Tarifa Extra</dt>
            <dd class="col-sm-8">$@Model.TarifaExtra.ToString("N2")</dd>

            <dt class="col-sm-4">Fecha Alta</dt>
            <dd class="col-sm-8">@Model.FechaAlta.ToString("dd/MM/yyyy")</dd>
        </dl>
    </div>

    <div class="col-md-12">
        <dl class="row">
            <dt class="col-sm-4">Email</dt>
            <dd class="col-sm-8">@Model.Email</dd>

            <dt class="col-sm-4">Ciudad de trabajo</dt>
            <dd class="col-sm-8">@Model.DocumentoIdentidad</dd>
        </dl>
    </div>
</div>

<div class="row mt-3">
    <div class="col-12">
        @if (!string.IsNullOrEmpty(Model.Notas))
        {
                <h6 class="mb-2">Notas</h6>
                <p class="mb-0">@Model.Notas</p>
        }
    </div>
</div>