@model List<SistemaVIP.Core.DTOs.TerapeutaPresentador.AsignacionesPresentadorDto>

<div class="card">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0"><i class="fa-solid fa-users-gear"></i> ASIGNACIONES TERAPEUTA-PRESENTADOR</h4>
    </div>
    <div class="card-body">
        <div class="row">
            <!-- Panel Izquierdo - Lista de Presentadores -->
            <div class="col-md-4 border-end">
                <h5 class="mb-3">Presentadores</h5>
                <div class="list-group" id="lista-presentadores">
                    @if (Model != null && Model.Any())
                    {
                        foreach (var asignacion in Model)
                        {
                            <a href="#" class="list-group-item list-group-item-action @(asignacion.Estado != "ACTIVO" ? "disabled" : "")"
                               data-presentador-id="@asignacion.PresentadorId">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">@asignacion.NombreCompleto</h6>
                                    <small>
                                        <span class="badge bg-@(asignacion.Estado == "ACTIVO" ? "success" : "danger")">
                                            @asignacion.Estado
                                        </span>
                                        <span class="ms-2">@asignacion.CantidadTerapeutas terapeutas</span>
                                    </small>
                                </div>
                            </a>
                        }
                    }
                    else
                    {
                        <div class="alert alert-info">
                            No hay presentadores disponibles
                        </div>
                    }
                </div>
            </div>

            <!-- Panel Derecho - Terapeutas -->
            <div class="col-md-8">
                <div id="panel-terapeutas" class="d-none">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="mb-0">Terapeutas Disponibles</h5>
                        <button class="btn btn-primary btn-sm" id="btn-asignar-terapeuta">
                            <i class="fa-solid fa-plus"></i> Asignar Terapeuta
                        </button>
                    </div>

                    <!-- Tabla de Terapeutas Asignadas -->
                    <table class="table table-striped" id="tabla-terapeutas-asignadas">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Teléfono</th>
                                <th>Estado</th>
                                <th>Fecha Asignación</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Se llena dinámicamente con JavaScript -->
                        </tbody>
                    </table>
                </div>

                <div id="panel-sin-seleccion" class="text-center py-5">
                    <i class="fas fa-hand-point-left fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">Seleccione un presentador para ver sus terapeutas asignadas</h5>
                </div>
            </div>
        </div>
    </div>
</div>