<div class="servicios-container">
    <!-- Filtros -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="form-group">
                <label class="form-label">Estado</label>
                <select class="form-select" id="filtro-estado">
                    <option value="">Todos</option>
                    <option value="PENDIENTE">Pendiente</option>
                    <option value="EN_PROCESO">En Proceso</option>
                    <option value="POR_CONFIRMAR">Por Confirmar</option>
                    <option value="FINALIZADO">Finalizado</option>
                    <option value="PAGADO">Pagado</option>
                    <option value="CANCELADO">Cancelado</option>
                </select>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label class="form-label">Terapeuta</label>
                <select class="form-select" id="filtro-terapeuta">
                    <option value="">Todas</option>
                </select>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label class="form-label">Fecha Desde</label>
                <input type="date" class="form-control" id="fecha-desde" />
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label class="form-label">Fecha Hasta</label>
                <input type="date" class="form-control" id="fecha-hasta" />
            </div>
        </div>
    </div>

    <!-- Tabla de Servicios -->
    <div class="table-responsive">
        <table id="tablaServicios"
               class="table table-striped"
               data-toggle="table"
               data-pagination="true"
               data-search="true"
               data-page-size="10"
               data-show-refresh="true"
               data-locale="es-MX">
            <thead>
                <tr>
                    <th data-field="id" data-sortable="true">ID</th>
                    <th data-field="fechaServicio" data-sortable="true">Fecha</th>
                    <th data-field="terapeuta" data-sortable="true">Terapeuta</th>
                    <th data-field="tipoUbicacion">Ubicación</th>
                    <th data-field="duracion">Duración</th>
                    <th data-field="montoTotal" data-sortable="true">Monto Total</th>
                    <th data-field="comision" data-sortable="true">Comisión</th>
                    <th data-field="estado" data-sortable="true">Estado</th>
                    <th data-field="acciones" data-formatter="formatearAcciones">Acciones</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<!-- Template para acciones -->
<script id="accionesTemplate" type="text/x-template">
    <div class="btn-group">
        <button class="btn btn-sm btn-info btn-detalle-servicio"
                title="Ver detalle"
                onclick="mostrarDetalleServicio({{id}})">
            <i class="fas fa-eye"></i>
        </button>

        {{#if puedeEditar}}
        <button class="btn btn-sm btn-primary btn-editar-servicio"
                title="Editar servicio"
                onclick="editarServicio({{id}})">
            <i class="fas fa-edit"></i>
        </button>
        {{/if}}

        {{#if puedeSubirComprobante}}
        <button class="btn btn-sm btn-success btn-comprobante"
                title="Subir comprobante"
                onclick="subirComprobante({{id}})">
            <i class="fas fa-receipt"></i>
        </button>
        {{/if}}

        {{#if puedeCancelar}}
        <button class="btn btn-sm btn-danger btn-cancelar-servicio"
                title="Cancelar servicio"
                onclick="cancelarServicio({{id}})">
            <i class="fas fa-times"></i>
        </button>
        {{/if}}
    </div>
</script>

<!-- Indicador de carga -->
<div id="loadingIndicator" class="text-center d-none">
    <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Cargando...</span>
    </div>
</div>