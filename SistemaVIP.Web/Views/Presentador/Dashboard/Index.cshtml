@{
    ViewData["Title"] = "Dashboard Presentador";
}

<head>
    <link rel="stylesheet" href="~/css/presentador/dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/presentador/servicios.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/presentador/calendario.css" asp-append-version="true" />
</head>

<div class="container-fluid">
    <!-- Contenido de los Tabs -->
    <div class="tab-content" id="presentadorTabsContent">
        <!-- Tab de Servicios -->
        <div class="tab-pane fade show active" id="servicios" role="tabpanel">
            <div class="card">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="fas fa-calendar-check"></i> SERVICIOS</h4>
                    <div>
                        <button class="btn btn-light btn-sm me-2" id="btnVerTerapeutas">
                            <i class="fas fa-users"></i> Ver Terapeutas
                        </button>
                        <button class="btn btn-light btn-sm" id="btnNuevoServicio">
                            <i class="fas fa-plus"></i> Nuevo Servicio
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    @await Html.PartialAsync("~/Views/Presentador/Dashboard/_Servicios.cshtml")
                </div>
            </div>
        </div>

        <!-- Tab de Calendario -->
        <div class="tab-pane fade" id="calendario" role="tabpanel">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-calendar-alt"></i> CALENDARIO</h4>
                </div>
                <div class="card-body">
                    @await Html.PartialAsync("~/Views/Presentador/Dashboard/_Calendario.cshtml")
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modales -->
<div id="modalSection">
    <!-- Los modales se cargarán dinámicamente aquí -->
</div>

@section Scripts {
    <script src="~/js/presentador/dashboard.js" asp-append-version="true"></script>
    <script src="~/js/presentador/servicios.js" asp-append-version="true"></script>
    <script src="~/js/presentador/calendario.js" asp-append-version="true"></script>
    <script src="~/js/presentador/modals/comprobantes.js" asp-append-version="true"></script>
    <script src="~/js/presentador/modals/detalle-servicio.js" asp-append-version="true"></script>
    <script src="~/js/presentador/modals/editar-servicio.js" asp-append-version="true"></script>
    <script src="~/js/presentador/modals/nuevo-servicio.js" asp-append-version="true"></script>
    <script src="~/js/presentador/modals/terapeutas.js" asp-append-version="true"></script>
}
