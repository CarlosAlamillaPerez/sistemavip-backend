@model SistemaVIP.Core.DTOs.Auth.LoginRequestDto
@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = "_LayoutAuth";
}

<head>
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
</head>

<div class="container">
    <div class="row justify-content-center align-items-center min-vh-100">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow">
                <div class="card-body p-5">
                    <h2 class="text-center mb-4">Sistema VIP</h2>

                    <form asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="needs-validation">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" type="email" required
                                   data-val="true"
                                   data-val-required="El email es requerido"
                                   data-val-email="Por favor ingrese un email válido" />
                            <span asp-validation-for="Email" class="invalid-feedback"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Contraseña</label>
                            <input asp-for="Password" class="form-control" type="password" required
                                   data-val="true"
                                   data-val-required="La contraseña es requerida"
                                   data-val-length="La contraseña debe tener al menos 6 caracteres"
                                   data-val-length-min="6" />
                            <span asp-validation-for="Password" class="invalid-feedback"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                            <label asp-for="RememberMe" class="form-check-label">Mantener sesión iniciada</label>
                        </div>

                        <button type="submit" class="btn btn-primary w-100" id="loginButton">
                            <span class="spinner-border spinner-border-sm me-2 d-none" role="status" id="loginSpinner"></span>
                            Iniciar Sesión
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/login.js" asp-append-version="true"></script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}